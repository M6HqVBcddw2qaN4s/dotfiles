! For consistency across Xlib apps (xclock, xfontsel, and others)
*foreground: rgb:cd/d6/f4
*background: rgb:1e/1e/2e
*cursorColor: rgb:f5/e0/dc

! Set $TERM
XTerm.termName: xterm-256color

! Enable UTF8
XTerm.vt100.locale: false
XTerm.vt100.utf8: true

! Font Family
XTerm.vt100.faceName: JetBrainsMono Nerd Font Mono:size=13:antialias=true

! Fix Alt key
XTerm.vt100.metaSendsEscape: true

! Fix copy/paste
Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

! Black
XTerm.vt100.color0: rgb:45/47/5a
XTerm.vt100.color8: rgb:58/5b/70

! Red
XTerm.vt100.color1: rgb:f3/8b/a8
XTerm.vt100.color9: rgb:f3/8b/a8

! Green
XTerm.vt100.color2:  rgb:a6/e3/a1
XTerm.vt100.color10: rgb:a6/e3/a1

! Yellow
XTerm.vt100.color3:  rgb:f9/e2/af
XTerm.vt100.color11: rgb:f9/e2/af

! Blue
XTerm.vt100.color4:  rgb:89/b4/fa
XTerm.vt100.color12: rgb:89/b4/fa

! Magenta
XTerm.vt100.color5:  rgb:f5/c2/e7
XTerm.vt100.color13: rgb:f5/c2/e7

! Cyan
XTerm.vt100.color6:  rgb:94/e2/d5
XTerm.vt100.color14: rgb:94/e2/d5

! White
XTerm.vt100.color7:  rgb:ba/c2/de
XTerm.vt100.color15: rgb:a6/ad/c8
